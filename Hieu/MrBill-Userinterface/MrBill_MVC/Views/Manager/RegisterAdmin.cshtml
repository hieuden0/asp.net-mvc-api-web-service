@using MrBill_MVC
@using System.Globalization
@using MrBill_MVC.MrBillUserServices
@model MrBill_MVC.Models.RegisterModel
@{
    Layout = null;
    var count = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AllUserManage</title>
    <link href="~/Content/all-user.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <!-- Top MANAGE PARTIAL-->
        @Html.Partial("_TopManagePartial")
        <!-- /. NAV LEFT  -->
        @Html.Partial("_LeftManagePartial")
        <!--RIGHT -->
        <div id="page-wrapper">
            <div class="right_content_regiter">
                <h2>Register User</h2>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    <div class="login-form center">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Email" })
                            <label for="Email" class="login-field-icon fui-mail"></label>
                        </div>
                        <div class="form-group">
                            @Html.DropDownListFor(m => m.UserRoleId,
                              new List<SelectListItem> {
                                   new SelectListItem { Value = "1" , Text = "OrdinaryUser" },
                                   new SelectListItem { Value = "2" , Text = "MrbillAdmin" },
                                   new SelectListItem { Value = "3" , Text = "CompanyAdmin" }
                                },
                           new { @class = "form-control" })
                            <label for="ConfirmPassword" class="login-field-icon fui-lock"></label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "Förnamn" })
                            <label for="FirstName" class="login-field-icon fui-mail"></label>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Efternamn" })
                            <label for="LastName" class="login-field-icon fui-mail"></label>
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Lösenord" })
                            <label for="Password" class="login-field-icon fui-lock"></label>
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Bekfräfta Lösenord" })
                            <label for="ConfirmPassword" class="login-field-icon fui-lock"></label>
                        </div>
                        <div>
                            <input type="submit" value="Register" class="btn btn-block btn-lg btn-primary" />
                        </div>
                        @ViewBag.Error

                    </div>
                }
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="row">
            <div class="col-lg-12">
            </div>
        </div>
    </div>

    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/Scripts/custom.js"></script>
</body>
</html>
