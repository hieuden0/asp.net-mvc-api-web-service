@using MrBill_MVC
@using System.Globalization
@using MrBill_MVC.MrBillUserServices
@{
    Layout = null;
    var count = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AllUserManage</title>
    <link href="~/Content/all-user.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <!-- Top MANAGE PARTIAL-->
        @Html.Partial("_TopManagePartial")
        <!-- /. NAV LEFT  -->
        @Html.Partial("_LeftManagePartial")
        <!--RIGHT -->
        <div id="page-wrapper">
            <div class="right_content">

                <h2>Users Manage</h2>
                <table class="rounded-corner" summary="2007 Major IT Companies' Profit">
                    <thead>
                        <tr>
                            <td class="rounded-q4"></td>
                            <td class="rounded-q2">UserId</td>
                            <td class="rounded-q5">UserName</td>
                            <td class="rounded-q3">FirstName</td>
                            <td class="rounded-q3">LastName</td>
                            <td class="rounded">Address</td>
                            <td class="rounded-q3">City</td>
                            <td class="rounded-q3">PostCode</td>
                            <td class="rounded">Phone</td>
                            <td class="rounded">UserRole</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in ((IEnumerable<UserDTO>)ViewBag.userList).OrderBy(t => t.UserId))
                        {
                            count++;
                            var userRole = "OrdinaryUser";
                            if (user.UserRoleId == 1)
                            {
                                userRole = "MrbillAdmin";
                            }else  if(user.UserRoleId == 2){
                                userRole = "CompanyAdmin";
                            }
                            <tr>
                                <td class="rounded-q4">@count</td>
                                <td class="rounded-q2"><div class="threedot2">@user.UserId</div></td>
                                <td class="rounded-q5"><div class="threedot5">@user.Username</div></td>
                                <td class="rounded-q3"><div class="threedot3">@user.FirstName</div></td>
                                <td class="rounded-q3"><div class="threedot3">@user.LastName</div></td>
                                <td class="rounded"><div class="achxi">@user.Address</div></td>
                                <td class="rounded-q3"><div class="threedot3">@user.City</div></td>
                                <td class="rounded-q3"><div class="threedot3">@user.PostCode</div></td>
                                <td class="rounded">@user.Phone</td>
                                <td class="rounded">@userRole</td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
    <div class="footer">
        <div class="row">
            <div class="col-lg-12">
            </div>
        </div>
    </div>

    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/Scripts/custom.js"></script>
</body>
</html>
