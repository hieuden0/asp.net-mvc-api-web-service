@model MrBill_MVC.Models.ResetPasswordModel

@{
    ViewBag.Title = "ResetPassword";
}

<nav class="navbar navbar-inverse navbar-embossed" role="navigation">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-01">
            <span class="sr-only">Toggle navigation</span>
        </button>

    </div>
    <div class="collapse navbar-collapse" id="navbar-collapse-01">
        <ul class="nav navbar-nav navbar-left">
            <li>
                <a class="navbar-brand" href="/">
                    <img src="~/Content/img/mrbill.png" alt="" />
                </a>
            </li>
            <li class="active-menu">
                @Html.ActionLink("HEM", "Index", "Home", null, new { @class = "menu-item" })
            </li>
            <li>
                @Html.ActionLink("OM OSS", "About", "Home", null, new { @class = "menu-item" })
            </li>
            <li>
                @Html.Partial("_LoginPartial")
            </li>
        </ul>

    </div>
</nav>
<div class="page-container">

    <div class="bloc d-bloc" id="bloc-5">
        <div class="container bloc-xl">
            <div class="row">
                <div class="col-sm-4">
                </div>
                <div class="col-sm-4">
                    <h5>@ViewBag.Message</h5>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()


                        <div class="login-form center">
                            <div class="form-group">
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Nytt lösenord" })
                                    <label for="Password" class="login-field-icon fui-lock"></label>
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Bekräfta nytt lösenord" })
                                    <label for="ConfirmPassword" class="login-field-icon fui-lock"></label>
                                </div>
                                @Html.HiddenFor(m => m.ReturnToken)

                                <input type="submit" class="btn btn-block btn-lg btn-primary" value="Reset" />
                            </div>
                        </div>
                    }

                    <br />
                    <br />
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>